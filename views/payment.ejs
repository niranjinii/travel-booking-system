<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment - <%= package.package_name %></title>

    <!-- FONT + BOOTSTRAP -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="stylesheet" href="/styles/payment.css" />
  </head>

  <body>
    <%- include('partials/navbar') %>

    <div class="payment-wrapper">
      <div class="container">
        <h1 class="payment-heading">Complete Your Booking</h1>

        <div class="payment-container">
          <!-- Booking Summary -->
          <div class="payment-summary">
            <h2>Booking Summary</h2>
            <p><strong>Package:</strong> <%= package.package_name %></p>
            <p><strong>Description:</strong> <%= package.description %></p>
            <p><strong>Travelers:</strong> <%= travelers %></p>
            <p><strong>Date:</strong> <%= date %></p>

            <p>
              <strong>Base Price per Traveler:</strong> ₹<%=
              package.price.toLocaleString() %>
            </p>
            <p><strong>Discount:</strong> <%= discount %>%</p>

            <!-- Cost Breakdown -->
            <div
              class="cost-breakdown mt-3 p-2"
              style="border: 1px solid #ccc; border-radius: 6px"
            >
              <h4>Cost Breakdown</h4>
              <p>
                Base Cost (Package × Travelers): ₹<span id="baseCost"></span>
              </p>
              <p>
                Transport Cost (Per Traveler): ₹<span id="transportCost"></span>
              </p>
              <p>
                <strong>Combined (Before Discount):</strong> ₹<span
                  id="combinedCost"
                ></span>
              </p>
              <p><strong>Discount Applied:</strong> <%= discount %>%</p>
            </div>

            <!-- Transport Selection -->
            <div class="transport-select mt-3">
              <label for="transport"
                ><strong>Select Transport Option</strong></label
              >
              <select id="transport" class="form-select" required>
                <option value="" disabled selected>
                  -- Choose Transport --
                </option>
                <% transports.forEach(t => { %>
                <option
                  value="<%= t.transport_id %>"
                  data-price="<%= t.price %>"
                >
                  <%= t.mode %> - <%= t.company %> (₹<%=
                  t.price.toLocaleString() %>)
                </option>
                <% }) %>
              </select>
            </div>

            <hr />
            <h3>Total Payable: ₹<span id="finalTotal"></span></h3>
          </div>

          <!-- Payment Form -->
          <div class="payment-form">
            <h2>Payment Details</h2>
            <form action="/process-payment" method="POST">
              <div class="form-group">
                <label for="method">Payment Method</label>
                <select id="method" name="method" class="form-select" required>
                  <option value="" disabled selected>
                    -- Select Payment Method --
                  </option>
                  <option value="Credit Card">Credit Card</option>
                  <option value="Debit Card">Debit Card</option>
                  <option value="UPI">UPI</option>
                  <option value="Net Banking">Net Banking</option>
                  <option value="Wallet">Wallet</option>
                </select>
              </div>

              <!-- Hidden booking info -->
              <input
                type="hidden"
                name="package_id"
                value="<%= package.package_id %>"
              />
              <input type="hidden" name="travelers" value="<%= travelers %>" />
              <input type="hidden" id="selectedTransport" name="transport_id" />
              <input type="hidden" name="total" id="hiddenTotal" />
              <input
                type="hidden"
                name="travel_start_date"
                value="<%= date %>"
              />

              <button type="submit" class="pay-btn">Confirm Booking</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      const packagePrice = parseFloat("<%= package.price %>");
      const travelers = parseInt("<%= travelers %>");
      const discount = parseFloat("<%= discount %>") / 100;

      const transportSelect = document.getElementById("transport");
      const selectedTransportHidden =
        document.getElementById("selectedTransport");
      const finalTotalEl = document.getElementById("finalTotal");
      const hiddenTotal = document.getElementById("hiddenTotal");

      const baseCostEl = document.getElementById("baseCost");
      const transportCostEl = document.getElementById("transportCost");
      const combinedCostEl = document.getElementById("combinedCost");

      function calculateTotal() {
        if (!transportSelect.value) {
          finalTotalEl.textContent = "0.00";
          hiddenTotal.value = "";
          selectedTransportHidden.value = "";
          return;
        }

        const transportPrice = parseFloat(
          transportSelect.selectedOptions[0].dataset.price || 0
        );

        const baseCost = packagePrice * travelers;
        const transportCost = transportPrice * travelers;
        const combinedCost = baseCost + transportCost;
        const finalAmount = combinedCost * (1 - discount);

        baseCostEl.textContent = baseCost.toLocaleString();
        transportCostEl.textContent = transportCost.toLocaleString();
        combinedCostEl.textContent = combinedCost.toLocaleString();

        finalTotalEl.textContent = finalAmount.toFixed(2);
        hiddenTotal.value = finalAmount.toFixed(2);
        selectedTransportHidden.value = transportSelect.value;
      }

      transportSelect.addEventListener("change", calculateTotal);
      calculateTotal();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
