<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment - <%= package.package_name %></title>

    <!-- FONT + BOOTSTRAP -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="stylesheet" href="/styles/payment.css" />
  </head>

  <body>
    <%- include('partials/navbar') %>

    <div class="payment-wrapper">
      <div class="container">
        <h1 class="payment-heading">Complete Your Booking</h1>

        <div class="payment-container">
          <!-- Booking Summary -->
          <div class="payment-summary">
            <h2>Booking Summary</h2>
            <p><strong>Package:</strong> <%= package.package_name %></p>
            <p><strong>Description:</strong> <%= package.description %></p>
            <p><strong>Travelers:</strong> <%= travelers %></p>
            <p><strong>Date:</strong> <%= date %></p>
            <p>
              <strong>Base Price per Traveler:</strong> ₹<%=
              package.price.toLocaleString() %>
            </p>
            <p><strong>Discount:</strong> <%= discount %>%</p>
            <p>
              <strong>Total (before transport):</strong> ₹<span id="baseTotal"
                ><%= totalPrice %></span
              >
            </p>

            <!-- Transport Selection -->
            <div class="transport-select">
              <label for="transport"
                ><strong>Select Transport Option</strong></label
              >
              <select id="transport" class="form-select">
                <option value="0" data-price="0">-- Choose Transport --</option>
                <% transports.forEach(t => { %>
                <option
                  value="<%= t.transport_id %>"
                  data-price="<%= t.price %>"
                >
                  <%= t.mode %> - <%= t.company %> (₹<%=
                  t.price.toLocaleString() %>)
                </option>
                <% }) %>
              </select>
            </div>

            <hr />
            <h3>
              Total Payable: ₹<span id="finalTotal"><%= totalPrice %></span>
            </h3>
          </div>

          <!-- Payment Form -->
          <div class="payment-form">
            <h2>Payment Details</h2>
            <form action="/process-payment" method="POST">
              <div class="form-group">
                <label for="method">Payment Method</label>
                <select id="method" name="method" class="form-select" required>
                  <option value="">-- Select Payment Method --</option>
                  <option value="Credit Card">Credit Card</option>
                  <option value="Debit Card">Debit Card</option>
                  <option value="UPI">UPI</option>
                  <option value="Net Banking">Net Banking</option>
                  <option value="Wallet">Wallet</option>
                </select>
              </div>

              <!-- Hidden booking info -->
              <input
                type="hidden"
                name="package_id"
                value="<%= package.package_id %>"
              />
              <input type="hidden" name="travelers" value="<%= travelers %>" />
              <input type="hidden" id="selectedTransport" name="transport_id" />
              <input
                type="hidden"
                name="total"
                id="hiddenTotal"
                value="<%= totalPrice %>"
              />
              <input type="hidden" name="travel_start_date" value="<%= date %>" />

              <button type="submit" class="pay-btn">Confirm Booking</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      const baseTotal = parseFloat("<%= totalPrice %>");
      const transportSelect = document.getElementById("transport");
      const finalTotalEl = document.getElementById("finalTotal");
      const hiddenTotal = document.getElementById("hiddenTotal");

      transportSelect.addEventListener("change", function () {
        const transportPrice = parseFloat(
          this.selectedOptions[0].dataset.price || 0
        );
        const newTotal = baseTotal + transportPrice;
        finalTotalEl.textContent = newTotal.toFixed(2);
        hiddenTotal.value = newTotal.toFixed(2);
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // When user selects transport, update the hidden field
      document
        .getElementById("transport")
        .addEventListener("change", function () {
          document.getElementById("selectedTransport").value = this.value;
        });
    </script>
  </body>
</html>
