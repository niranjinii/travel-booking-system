<% if (message) { %>
<div class="popup <%= message.type %>"><%= message.text %></div>

<script>
  setTimeout(() => {
    document.querySelector(".popup").style.opacity = "0";
  }, 3000);
</script>

<style>
  .popup {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%); /* centers horizontally */
    padding: 14px 20px;
    border-radius: 6px;
    color: white;
    font-family: "Montserrat", sans-serif;
    transition: opacity 0.5s ease;
    z-index: 9999;
    text-align: center;
    min-width: 250px;
  }
  .popup.error {
    background: #c0392b;
  }
  .popup.success {
    background: #27ae60;
  }
</style>
<% } %>
