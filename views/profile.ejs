<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= user.name %> - Profile</title>

  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="/styles/profile.css" />
</head>

<body>
  <%- include('partials/navbar') %>

  <div class="profile-wrapper">
    <div class="container">

      <% if (message) { %>
      <div class="alert alert-<%= message.type %> text-center mt-3"><%= message.text %></div>
      <% } %>

      <div class="profile-header d-flex flex-wrap align-items-start justify-content-between">
        <div class="profile-info">
          <h1><%= user.name %></h1>
          <p><%= user.email %></p>
          <p>+91 <%= user.phone || '' %></p>

          <button id="editProfileBtn" class="btn btn-sm btn-outline-light" title="Edit Profile">
            <i class="bi bi-pencil"></i> Edit
          </button>
        </div>

        <form action="/logout" method="POST" class="logout-form">
          <button type="submit" class="logout-btn">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </form>
      </div>

      <div class="bookings-section mt-4">
        <h2>Your Bookings</h2>

        <% if (bookings && bookings.length > 0) { %>
          <div class="bookings-grid">
            <% bookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-image" style="background-image: url('<%= booking.image || "https://via.placeholder.com/300x200?text=Travel+Package" %>');"></div>
                <div class="booking-details">
                  <h3><%= booking.package_name %></h3>
                  <p><strong>Booking Date:</strong> <%= booking.booking_date %></p>
                  <p><strong>Travel Date:</strong> <%= booking.travel_start_date %></p>
                  <p><strong>Travelers:</strong> <%= booking.numtravelers %></p>
                  <a href="/booking/<%= booking.booking_id %>" class="details-btn">View Details</a>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="no-bookings">You haven't made any bookings yet. Start exploring!</p>
        <% } %>
      </div>

    </div>
  </div>

  <!-- âœ¨ MODAL OVERLAY FORM -->
  <div id="profileOverlay" class="overlay">
    <div class="overlay-content">
      <h2>Edit Profile</h2>

      <form id="editProfileForm" action="/update-profile" method="POST" class="update-profile-form">
        <div class="form-group">
          <label>Name</label>
          <input type="text" name="name" value="<%= user.name %>" required>
        </div>

        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email" value="<%= user.email %>" required>
        </div>

        <div class="form-group">
          <label>Phone Number</label>
          <input type="text" name="phone" value="<%= user.phone || '' %>" maxlength="10">
        </div>

        <button type="submit" class="save-btn">Save</button>
        <button type="button" class="cancel-btn" id="closeOverlay">Cancel</button>
      </form>
    </div>
  </div>

<script>
  const editBtn = document.getElementById("editProfileBtn");
  const overlay = document.getElementById("profileOverlay");
  const closeOverlay = document.getElementById("closeOverlay");

  editBtn.onclick = () => overlay.classList.add("show");
  closeOverlay.onclick = () => overlay.classList.remove("show");
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
