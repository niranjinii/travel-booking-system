<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= user.name %> - Profile</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="/styles/profile.css" />

</head>
<body>
  <%- include('partials/navbar') %>

  <div class="profile-wrapper">
    <div class="container">
      <div class="profile-header d-flex flex-wrap align-items-start justify-content-between">
        <div class="profile-info">
          <h1><%= user.name %></h1>
          <p><%= user.email %></p>
          <p>+91 <%= user.phone || '' %></p>
          <!-- Edit button next to user info -->
          <button id="editProfileBtn" class="btn btn-sm btn-outline-light" title="Edit Profile">
            <i class="bi bi-pencil"></i> Edit
          </button>
        </div>

        <!-- Logout Button -->
        <form action="/logout" method="POST" class="logout-form">
          <button type="submit" class="logout-btn">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </form>
      </div>

      <!-- Edit form appears below the profile header -->
      <div id="editProfileContainer" class="edit-profile-container">
        <form id="editProfileForm" action="/update-profile" method="POST" class="edit-profile-form">
          <h5>Update Your Details</h5>
          <div class="mb-2">
            <input type="text" name="name" class="form-control" placeholder="Name" value="<%= user.name %>" required>
          </div>
          <div class="mb-2">
            <input type="email" name="email" class="form-control" placeholder="Email" value="<%= user.email %>" required>
          </div>
          <div class="mb-2">
            <input type="text" name="phone" class="form-control" placeholder="Phone Number" value="<%= user.phone || '' %>">
          </div>
          <div class="edit-profile-buttons">
            <button type="submit" class="btn btn-success btn-sm flex-grow-1">Save</button>
            <button type="button" id="cancelEditBtn" class="btn btn-secondary btn-sm flex-grow-1">Cancel</button>
          </div>
        </form>
      </div>

      <div class="bookings-section mt-4">
        <h2>Your Bookings</h2>

        <% if (bookings && bookings.length > 0) { %>
          <div class="bookings-grid">
            <% bookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-image" style="background-image: url('<%= booking.image || "https://via.placeholder.com/300x200?text=Travel+Package" %>');"></div>
                <div class="booking-details">
                  <h3><%= booking.package_name %></h3>
                  <p><strong>Booking Date:</strong> <%= booking.booking_date %></p>
                  <p><strong>Travel Date:</strong> <%= booking.travel_start_date %></p>
                  <p><strong>Travelers:</strong> <%= booking.numtravelers %></p>
                  <p><strong>Total:</strong> â‚¹<%= booking.total_price %></p>
                  <a href="/booking/<%= booking.booking_id %>" class="details-btn">View Details</a>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="no-bookings">You haven't made any bookings yet. Start exploring!</p>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    const editBtn = document.getElementById("editProfileBtn");
    const cancelBtn = document.getElementById("cancelEditBtn");
    const editContainer = document.getElementById("editProfileContainer");

    editBtn.addEventListener("click", () => {
      editContainer.style.display = "block";
      window.scrollTo({ top: editContainer.offsetTop - 20, behavior: 'smooth' });
    });

    cancelBtn.addEventListener("click", () => {
      editContainer.style.display = "none";
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
