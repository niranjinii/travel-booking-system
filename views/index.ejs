<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Landing Page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Open+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="page-wrapper">
      <header class="hero-carousel-header">
        <div class="overlay"></div>

        <!-- 1. NAVIGATION PARTIAL INCLUDED HERE -->
        <%- include('partials/navbar') %>

        <!-- 2. SOCIAL LINKS PARTIAL INCLUDED HERE -->
        <%- include('partials/socials-sidebar') %>

        <div class="hero-content">
          <h1 class="hero-title">TRAVEL</h1>
          <p class="hero-subtitle">AND LEARN THE BEST WAY TO DO IT</p>
          <button class="start-btn">START NOW</button>
        </div>

        <div
          id="mainHeroCarousel"
          class="carousel slide carousel-fade"
          data-bs-ride="carousel"
        >
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img
                src="/images/carousel1.jpg"
                class="d-block w-100"
                alt="Carousel Image 1"
              />
            </div>
            <div class="carousel-item">
              <img
                src="/images/carousel2.jpeg"
                class="d-block w-100"
                alt="Carousel Image 2"
              />
            </div>
            <div class="carousel-item">
              <img
                src="/images/carousel3.jpg"
                class="d-block w-100"
                alt="Carousel Image 3"
              />
            </div>
          </div>
        </div>
      </header>

      <main class="featured-content-wrapper">
        <div class="featured-content">
          <% topPackages.forEach(pkg => { %>
          <a
            href="/package/<%= pkg.package_id %>"
            class="card"
            style="text-decoration: none"
          >
            <div class="card-image-container">
              <img
                src="<%= pkg.image || 'https://placehold.co/600x400?text=Travel+Package' %>"
                alt="<%= pkg.package_name %>"
                class="card-image"
              />
            </div>
            <div class="card-body">
              <h2 class="card-title"><%= pkg.package_name %></h2>
              <p class="card-text">Our travelers love this destination.</p>
            </div>
          </a>
          <% }) %>
        </div>
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
